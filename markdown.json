  "PoE Note Block": {
    "prefix": "pnote",
    "body": [
      "<div class=\"note-block\">\n\n$1\n\n</div>"
    ],
    "description": "Create a PoE Note block"
  },
  "PoE Link Block": {
    "prefix": "plink",
    "body": [
      "<div class=\"link-block\">\n\n$1\n\n</div>"
    ],
    "description": "Create a PoE Resource block"
  },
  "PoE NPC": {
    "prefix": "npc",
    "body": "[$1](npc)",
    "description": "Quick NPC link hijack"
  },
  "PoE Boss": {
    "prefix": "boss",
    "body": "[$1](boss)",
    "description": "Quick Boss link hijack"
  },
  "PoE Red Gem": {
    "prefix": "gemred",
    "body": "[$1](gemred)",
    "description": "Red Gem badge"
  },
  "PoE Green Gem": {
    "prefix": "gemgreen",
    "body": "[$1](gemgreen)",
    "description": "Green Gem badge"
  },
  "PoE Grey Gem": {
    "prefix": "gemgrey",
    "body": "[$1](gemgrey)",
    "description": "Blue Gem badge"
  },
  "PoE Blue Gem": {
    "prefix": "gemblue",
    "body": "[$1](gemblue)",
    "description": "Grey Gem badge"
  },
"PoE Checklist Block": {
  "prefix": "pcheck",
  "body": [
    "<div class=\"link-block\" id=\"$1\">",
    "<ul class=\"checklist\">\n",
    "- [ ] $2\n",
    "</ul>",
    "</div>"
  ],
  "description": "Creates a styled Link Block with a Checklist inside"
}
}